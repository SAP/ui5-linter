{
	// This is our configuration for development and linting,
	// compared to "tsconfig.build.json" it also includes tests
	// and other TypeScript sources in the project
	"extends": "./tsconfig.base.json",
	"include": [
		"src/**/*",
		"test/**/*",
		"scripts/**/*"
	],
	"exclude": [
		"test/tmp/**/*",
		"test/projects/**/*",
		"test/fixtures/**/*",
	]
}
